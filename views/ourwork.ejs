<body>
    <%- include("partials/primaryHeader.ejs") %>

        <!-- our work -->
        <h1 class="text-5xl mt-24 font-bold text-center">Our Work</h1>
        <div class="flex flex-col md:flex-row">
            <script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.x.x/dist/alpine.min.js" defer></script>
            <!-- filters  -->
            <div class="md:flex py-12 md:py-32 flex-col md:flex-row md:min-h-screen">
                <div @click.away="open = false"
                    class="flex flex-col w-full md:w-64 text-gray-700 bg-white dark-mode:text-gray-200 dark-mode:bg-gray-800 flex-shrink-0"
                    x-data="{ open: false }">
                    <div class="flex-shrink-0 px-8 py-4 flex flex-row items-center justify-between">
                        <a href="#"
                            class="text-lg font-semibold tracking-widest text-gray-900 uppercase rounded-lg dark-mode:text-white focus:outline-none focus:shadow-outline">Categories</a>
                        <button class="rounded-lg md:hidden rounded-lg focus:outline-none focus:shadow-outline"
                            @click="open = !open">
                            <svg fill="currentColor" viewBox="0 0 20 20" class="w-6 h-6">
                                <path x-show="!open" fill-rule="evenodd"
                                    d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM9 15a1 1 0 011-1h6a1 1 0 110 2h-6a1 1 0 01-1-1z"
                                    clip-rule="evenodd"></path>
                                <path x-show="open" fill-rule="evenodd"
                                    d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
                                    clip-rule="evenodd"></path>
                            </svg>
                        </button>
                    </div>
                    <nav :class="{'block': open, 'hidden': !open}"
                        class="flex-grow md:block px-4 pb-4 md:pb-0 md:overflow-y-auto">
                        <a class="tabs block px-4 py-2 mt-2 text-sm font-semibold text-gray-900 rounded-lg dark-mode:bg-gray-700 dark-mode:hover:bg-gray-600 dark-mode:focus:bg-gray-600 dark-mode:focus:text-white dark-mode:hover:text-white dark-mode:text-gray-200 hover:text-gray-900 focus:text-gray-900 hover:bg-gray-200 focus:bg-gray-200 focus:outline-none focus:shadow-outline"
                            href="/our-work/All" id="All">All</a>
                        <a class="tabs block px-4 py-2 mt-2 text-sm font-semibold text-gray-900 rounded-lg dark-mode:bg-transparent dark-mode:hover:bg-gray-600 dark-mode:focus:bg-gray-600 dark-mode:focus:text-white dark-mode:hover:text-white dark-mode:text-gray-200 hover:text-gray-900 focus:text-gray-900 hover:bg-gray-200 focus:bg-gray-200 focus:outline-none focus:shadow-outline"
                            href="/our-work/Books" id="Books">Books</a>
                        <a class="tabs block px-4 py-2 mt-2 text-sm font-semibold text-gray-900 rounded-lg dark-mode:bg-transparent dark-mode:hover:bg-gray-600 dark-mode:focus:bg-gray-600 dark-mode:focus:text-white dark-mode:hover:text-white dark-mode:text-gray-200 hover:text-gray-900 focus:text-gray-900 hover:bg-gray-200 focus:bg-gray-200 focus:outline-none focus:shadow-outline"
                            href="/our-work/Logo" id="Logo">Logo</a>
                        <a class="tabs block px-4 py-2 mt-2 text-sm font-semibold text-gray-900 bg-transparent rounded-lg dark-mode:bg-transparent dark-mode:hover:bg-gray-600 dark-mode:focus:bg-gray-600 dark-mode:focus:text-white dark-mode:hover:text-white dark-mode:text-gray-200 hover:text-gray-900 focus:text-gray-900 hover:bg-gray-200 focus:bg-gray-200 focus:outline-none focus:shadow-outline"
                            href="/our-work/App-Development" id="App-Development">App-Development</a>
                        <a class="tabs block px-4 py-2 mt-2 text-sm font-semibold text-gray-900 bg-transparent rounded-lg dark-mode:bg-transparent dark-mode:hover:bg-gray-600 dark-mode:focus:bg-gray-600 dark-mode:focus:text-white dark-mode:hover:text-white dark-mode:text-gray-200 hover:text-gray-900 focus:text-gray-900 hover:bg-gray-200 focus:bg-gray-200 focus:outline-none focus:shadow-outline"
                            href="/our-work/Newspaper-Ad" id="Newspaper-Ad">Newspaper-Ad</a>
                        <a class="tabs block px-4 py-2 mt-2 text-sm font-semibold text-gray-900 bg-transparent rounded-lg dark-mode:bg-transparent dark-mode:hover:bg-gray-600 dark-mode:focus:bg-gray-600 dark-mode:focus:text-white dark-mode:hover:text-white dark-mode:text-gray-200 hover:text-gray-900 focus:text-gray-900 hover:bg-gray-200 focus:bg-gray-200 focus:outline-none focus:shadow-outline"
                            href="/our-work/Typography" id="Typography">Typography</a>
                        <a class="tabs block px-4 py-2 mt-2 text-sm font-semibold text-gray-900 bg-transparent rounded-lg dark-mode:bg-transparent dark-mode:hover:bg-gray-600 dark-mode:focus:bg-gray-600 dark-mode:focus:text-white dark-mode:hover:text-white dark-mode:text-gray-200 hover:text-gray-900 focus:text-gray-900 hover:bg-gray-200 focus:bg-gray-200 focus:outline-none focus:shadow-outline"
                            href="/our-work/Web-Design" id="Web-Design">Web-Design</a>
                        <a class="tabs block px-4 py-2 mt-2 text-sm font-semibold text-gray-900 bg-transparent rounded-lg dark-mode:bg-transparent dark-mode:hover:bg-gray-600 dark-mode:focus:bg-gray-600 dark-mode:focus:text-white dark-mode:hover:text-white dark-mode:text-gray-200 hover:text-gray-900 focus:text-gray-900 hover:bg-gray-200 focus:bg-gray-200 focus:outline-none focus:shadow-outline"
                            href="/our-work/T-Shirt" id="T-shirt">T-Shirt</a>
                        <a class="tabs block px-4 py-2 mt-2 text-sm font-semibold text-gray-900 bg-transparent rounded-lg dark-mode:bg-transparent dark-mode:hover:bg-gray-600 dark-mode:focus:bg-gray-600 dark-mode:focus:text-white dark-mode:hover:text-white dark-mode:text-gray-200 hover:text-gray-900 focus:text-gray-900 hover:bg-gray-200 focus:bg-gray-200 focus:outline-none focus:shadow-outline"
                            href="/our-work/Banner" id="Banner">Banner</a>
                        <a class="tabs block px-4 py-2 mt-2 text-sm font-semibold text-gray-900 bg-transparent rounded-lg dark-mode:bg-transparent dark-mode:hover:bg-gray-600 dark-mode:focus:bg-gray-600 dark-mode:focus:text-white dark-mode:hover:text-white dark-mode:text-gray-200 hover:text-gray-900 focus:text-gray-900 hover:bg-gray-200 focus:bg-gray-200 focus:outline-none focus:shadow-outline"
                            href="/our-work/Card" id="Card">Card</a>
                        <a class="tabs block px-4 py-2 mt-2 text-sm font-semibold text-gray-900 bg-transparent rounded-lg dark-mode:bg-transparent dark-mode:hover:bg-gray-600 dark-mode:focus:bg-gray-600 dark-mode:focus:text-white dark-mode:hover:text-white dark-mode:text-gray-200 hover:text-gray-900 focus:text-gray-900 hover:bg-gray-200 focus:bg-gray-200 focus:outline-none focus:shadow-outline"
                            href="/our-work/Promotional" id="Promotional">Promotional</a>
                        <a class="tabs block px-4 py-2 mt-2 text-sm font-semibold text-gray-900 bg-transparent rounded-lg dark-mode:bg-transparent dark-mode:hover:bg-gray-600 dark-mode:focus:bg-gray-600 dark-mode:focus:text-white dark-mode:hover:text-white dark-mode:text-gray-200 hover:text-gray-900 focus:text-gray-900 hover:bg-gray-200 focus:bg-gray-200 focus:outline-none focus:shadow-outline"
                            href="/our-work/Packaging" id="Packaging">Packaging</a>
                        <a class="tabs block px-4 py-2 mt-2 text-sm font-semibold text-gray-900 bg-transparent rounded-lg dark-mode:bg-transparent dark-mode:hover:bg-gray-600 dark-mode:focus:bg-gray-600 dark-mode:focus:text-white dark-mode:hover:text-white dark-mode:text-gray-200 hover:text-gray-900 focus:text-gray-900 hover:bg-gray-200 focus:bg-gray-200 focus:outline-none focus:shadow-outline"
                            href="/our-work/Social-Media" id="Social-Media">Social-Media</a>
                        <a class="tabs block px-4 py-2 mt-2 text-sm font-semibold text-gray-900 bg-transparent rounded-lg dark-mode:bg-transparent dark-mode:hover:bg-gray-600 dark-mode:focus:bg-gray-600 dark-mode:focus:text-white dark-mode:hover:text-white dark-mode:text-gray-200 hover:text-gray-900 focus:text-gray-900 hover:bg-gray-200 focus:bg-gray-200 focus:outline-none focus:shadow-outline"
                            href="/our-work/Digital-Ads" id="Digital-Ads">Digital-Ads</a>
                    </nav>
                </div>
            </div>
            <!-- content  -->
            <div class="min-h-screen py-12 md:py-32 px-10 ">
                <div
                    class=" grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 md:gap-x-10 xl-grid-cols-4 gap-y-10 gap-x-6 ">
                    <% workArray.forEach( work=> { %>
                        <div
                            class="container mx-auto shadow-lg rounded-lg max-w-md hover:pointer hover:border-2 hover:border-blue-700 transition duration-300">
                            <div class="hover:border-2 hover:border-blue-700">
                                <img src="<%= work.image %>" alt="" width="350" height="285"
                                    class="rounded-lg hover:border-2 hover:border-blue-700"
                                    onclick="openModal('<%= work.image %>');">
                            </div>
                        </div>
                        <% }); %>
                </div>
            </div>
        </div>

        <button type="button" class="btn btn-info hidden btn-lg" id="openModalBtn" data-toggle="modal"
            data-target="#myModal">Open
            Modal</button>
        <!-- modal  -->
        <div class="modal fade fixed inset-0 z-10 bg-gray-50 mx-auto hidden" id="myModal" role="dialog">
        </div>

        <script>
            let active = "#" + window.location.pathname.substring(10)
            $("nav a").removeClass("bg-gray-200")
            $(active).addClass("bg-gray-200")
        </script>
        <script>
            var modal = document.getElementById("myModal");
            // Get the button that opens the modal
            var btn = document.getElementById("openModalBtn");
            // Get the <span> element that closes the modal
            var span = document.getElementById("closeModalBtn")
            // When the user clicks on the button, open the modal
            btn.onclick = function () {
                modal.classList.remove("hidden")
            }
            function closeModal() {
                modal.classList.add("hidden")
            }
        </script>
        <script>
            function openModal(url) {
                var html =
                    `
                 <div class="modal-dialog">
                    <!-- Modal content-->
                    <div class="modal-content mx-auto">
                        <div class="modal-header flex justify-between">
                            <button type="button" onclick="closeModal()" style="padding-right:1.5rem; padding-left:1.5rem; margin-top:60px; border-radius:50%; z-index:1000;" class="close bg-white text-7xl border shadow-xl rounded-full py-4" id="closeModalBtn" data-dismiss="modal">&times;</button>
                        </div>
                        <div class="modal-body flex justify-center items-center">
                            <img src="${url}" style="height:600px; width:auto;" class="rounded-lg mx-auto align-middle" alt="our work full size image">
                        </div>
                    </div>
                </div>
                `
                document.getElementById('myModal').innerHTML = html;
                document.getElementById("openModalBtn").click();
            }
        </script>
        <%- include("partials/footer.ejs") %>
</body>

</html>