      <a href="/our-work" class="px-6 my-auto mx-auto py-2 border-blue-600 text-blue-600 border-2 hover:bg-blue-600 hover:text-white transition duration-100 shadow-xl shadow-blue-500 rounded-md">
        View All
      </a>
    </div>
    <!-- image gallery  -->
    <div class="flex py-12 flex-row gap-6 image-gallery  overflow-scroll flex-nowrap transition-500 image-gallery">
      <% workArray.forEach( work=> { %>
      <!-- card -->
      <div class="relative card-body bottom-0" style="min-height: 250px; min-width: 300px; box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);">
        <img class="rounded-md card-image" src="<%= work.image %>" alt="" />
        <button class="px-6 card-text py-3 absolute top-4 border-2 shadow-xl bg-white rounded-md left-4">
          <%= work.category %>
        </button>
      </div>
      <% }); %>
    </div>
    <div class="flex flex-row justify-center gap-4 mb-12">
      <button class="text-5xl" id="left-navigate-portfolio"><i class="fas fa-arrow-circle-left"></i></button>
      <button class="text-5xl" id="right-navigate-portfolio"><i class="fas fa-arrow-circle-right"></i></button>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
      $(".image-gallery").scrollLeft(200);
      var scroll = 0;
      $("#left-navigate-portfolio").click(function() {
        scroll -= 100;
        $(".image-gallery").scrollLeft(scroll);
      })
      $("#right-navigate-portfolio").click(function() {
        scroll += 100;
        $(".image-gallery").scrollLeft(scroll);
      })
      $(".card-body").hover(
        function() {
          $(this).addClass("bottom-4");
          $(this).addClass("card-onhover");
        },
        function() {
          $(this).removeClass("bottom-4");
          $(this).removeClass("card-onhover");
        }
      );
    </script>
  </section>
